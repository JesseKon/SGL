  RESCOMP = windres
  TARGETDIR = ../bin/Debug-linux-x86/SGL
  TARGET = $(TARGETDIR)/libSGL.so
  OBJDIR = ../bin-int/Debug-linux-x86/SGL
  DEFINES += -DSGL_DEBUG -DSGL_PLATFORM_LINUX -DSGL_BUILD_DLL
  INCLUDES += -Isrc -Isrc/Core -Isrc/Core/Drawable -Isrc/Core/Renderer -Isrc/Core/Shader -Isrc/Core/Texture -I../dependencies/glfw/include -I../dependencies/glad/include -I../dependencies/glm -I../dependencies/stb_image
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m32 -fPIC -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m32 -fPIC -g -std=c++17
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += -lglfw -lGL
  LDDEPS +=
  ALL_LDFLAGS += $(LDFLAGS) -L../dependencies/glfw/lib-linux32 -L/usr/lib32 -m32 -shared -Wl,-soname=libSGL.so
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
